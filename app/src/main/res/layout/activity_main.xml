<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hapticModeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haptic Mode: Only Beats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/toggleRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Recording"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/richTapStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RichTap Support: Checking..."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Haptic Type:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/hapticTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioNormalHaptics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Haptics"/>

        <RadioButton
            android:id="@+id/radioRichTapHaptics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RichTap Haptics"/>
    </RadioGroup>

    <Switch
        android:id="@+id/micInputSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Microphone Input"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haptic Mode:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/hapticModeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/intensityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intensity: 50%"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/intensitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="0"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="8dp"/>

</LinearLayout>
